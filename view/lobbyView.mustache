<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/preguntados/public/estilos/lobby.css">
    <link rel="stylesheet" href="/preguntados/public/estilos/modalAbandono.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-...tuHASH...==" crossorigin="anonymous"/>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Big+Shoulders+Stencil+Text:wght@100..900&family=Honk&family=Roboto+Serif:ital,opsz,wght@0,8..144,100..900;1,8..144,100..900&family=Stick+No+Bills:wght@800&display=swap"
          rel="stylesheet">
</head>
<body>
<div class='bienvenido'>
    <div class="nombreYpunto">
        <h2 class="nameUsuario">{{usuario}}</h2>
        <div class="contenedorLevelUsuario">
            <h3 class="levelUsuario">{{nivel}}</h3>
        </div>
    </div>
    <a href="javascript:void(0)" class="boton-margen" id="openCustomExitModal"><span class="material-symbols-outlined">logout</span></a>

    <!-- Botón de ayuda con icono -->
    <!-- Botón de ayuda con icono -->
    <a href="javascript:void(0)" class="boton-ayuda" onclick="abrirModalAyuda()">
        <span class="material-symbols-outlined">help</span>
    </a>
    <!-- Botón para abrir el modal de crear pregunta -->
    <a href="javascript:void(0)" class="boton-crear-pregunta" onclick="mostrarModalPregunta()">
        <span class="material-symbols-outlined">app_registration</span>
    </a>
</div>


<div class="botones-container">
    <div class="botones-superiores">
        <a href="/preguntados/perfil/mostrarPantallaPerfil" class="btnPerfil">Perfil</a>

        <a href="/preguntados/ranking/mostrarPantallaRanking" class="btnRanking ">ranking</a>

    </div>
    <div class="boton-inferior">
        <a href="/preguntados/jugarPartida/empezarPartida" class="btnPartida">JUGAR</a>
    </div>

</div>


<!-- Modal de confirmación de abandono -->
<div id="customExitModal" class="modal-custom">
    <div class="modal-content-custom">
        <div class="modal-header-custom">
            <h3>Confirmar Salida</h3>
            <span class="close-custom" id="closeCustomExitModal">&times;</span>
        </div>
        <div class="modal-body-custom">
            ¿Estás seguro de que deseas abandonar la plataforma?
        </div>
        <div class="modal-footer-custom">
            <!-- Botón para cancelar -->
            <button id="customCancelButton" class="boton-cancelar-custom">Cancelar</button>
            <!-- Enlace para salir -->
            <a href='/preguntados/lobby/cerrarSesion' class="boton-abandonar-custom">Salir</a>
        </div>
    </div>
</div>

<!-- Modal de ayuda -->
<div id="modalAyuda" class="modal-ayuda">
    <div class="modal-contenido">
        <div class="modal-header">
            <h2>¿CÓMO JUGAR?</h2>
            <span class="cerrar-modal" onclick="cerrarModalAyuda()">&times;</span>
        </div>
        <div class="modal-body">
            <img src="/preguntados/public/imagenes/infografia.png" class="infografia">
        </div>
    </div>
</div>

<!-- Modal para crear pregunta -->
<div id="modalPregunta" class="modalPregunta">
    <div class="modal-contenido-2">
        <div class="modal-header">
            <div>
                <h2>Sugerencias:</h2>
                <h3>Sugerí tu pregunta para que sea parte de MysteryQuiz.</h3>
            </div>

            <span onclick="cerrarModalPregunta()" class="cerrar-modal">x</span>
        </div>
        <form class="form" action="/preguntados/lobby/guardar" method="POST">
            <div class="campo-editar">
                <div class="input-group">
                    <select name="categorias">
                        {{#categorias}}
                            <option value="{{id}}">{{descripcion}}</option>
                        {{/categorias}}
                    </select>
                </div>
            </div>

            <div class="campo-editar">
                <div class="input-group">
                    <input type="text" id="pregunta" name="pregunta" required placeholder="Pregunta"><br>
                </div>
            </div>
            <div class="campo-editar">
                <div class="input-group">
                    <input type="text" id="respuesta1" name="respuesta1" required placeholder="Respuesta A"><br>
                </div>
            </div>
            <div class="campo-editar">
                <div class="input-group">
                    <input type="text" id="respuesta2" name="respuesta2" required placeholder="Respuesta B"><br>
                </div>
            </div>
            <div class="campo-editar">
                <div class="input-group">
                    <input type="text" id="respuesta3" name="respuesta3" required placeholder="Respuesta C"><br>
                </div>
            </div>
            <div class="campo-editar">
                <div class="input-group">
                    <input type="text" id="respuesta4" name="respuesta4" required placeholder="Respuesta D"><br>
                </div>
            </div>
            <div class="radio-container">
                <label>
                    <input type="radio" id="correcta1" name="respuesta_correcta" value="1" checked>
                    <div class="radio-rect">A</div>
                </label>
                <label>
                    <input type="radio" id="correcta2" name="respuesta_correcta" value="2">
                    <div class="radio-rect">B</div>
                </label>
                <label>
                    <input type="radio" id="correcta3" name="respuesta_correcta" value="3">
                    <div class="radio-rect">C</div>
                </label>
                <label>
                    <input type="radio" id="correcta4" name="respuesta_correcta" value="4">
                    <div class="radio-rect">D</div>
                </label>
            </div>

            <button type="submit" class="boton-enviar">Enviar</button>

        </form>

    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/preguntados/public/js/customModal.js"></script>

</body>



